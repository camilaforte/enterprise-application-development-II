@model Fiap08.Web.MVC.Models.Responsavel

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>


@if(TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div> 
}


@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(r => r.Nome)
        @Html.TextBoxFor(r => r.Nome, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(r => r.telefone)
        @Html.TextBoxFor(r => r.telefone, new { @class = "form-control" })
    </div>

    <input type="submit" value="CADASTRAR" class="btn btn-primary" />
}
