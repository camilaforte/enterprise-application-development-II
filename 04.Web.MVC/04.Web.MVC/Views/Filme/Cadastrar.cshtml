@model _04.Web.MVC.Models.Filme

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

<!-- pegar uma viewBag-->
<h3>@ViewBag.titulo</h3>
<h3>@TempData["genero"]</h3>

@if (Model != null)
{
    <ul>
        <li>@Model.nome</li>
        <li>@Model.dataLancamento</li>
        <li>@Model.genero</li>
        <li>@Model.legendado</li>
    </ul>
    
}

<form action="/Filme/Cadastrar" method="post">
    <div class="form-group">
        <label for="iNome">Nome</label>
        <input type="text" name="nome" id="iNome" />
    </div>
    <div class="form-group">
        <label for="iDataLancamento">Data Lançamento</label>
        <input type="datetime" name="dataLancamento" id="iDataLancamento" />
    </div>
    <div class="form-group">
        <label for="iGenero">Genero</label>
        <select class="form-control" name="genero" id="iGenero" >
              <option value="acao">Ação</option>
              <option value="comedia">Comédia</option>
              <option value="drama">Drama</option>
        </select>
    </div>
    <div class="form-group">
        <label for="iLegendado">Legendado</label>
        <input type="checkbox" name="legendado" id="iLegendado" />
    </div>
    <div class="form-group">
        <input type="submit" value="cadastrar" class="btn btn-primary"/>
    </div>
</form>