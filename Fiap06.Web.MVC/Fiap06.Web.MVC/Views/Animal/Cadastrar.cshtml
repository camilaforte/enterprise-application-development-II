@model Fiap06.Web.MVC.Models.Animal

@{
    /**/

    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(animal => animal.Nome)
        @Html.TextBoxFor(animal => animal.Nome)
    </div>

    <div class="form-group">
        @Html.LabelFor(animal => animal.Raca)
        @Html.TextBoxFor(animal => animal.Raca)
    </div>

    <div class="form-group">
        @Html.LabelFor(animal => animal.Castrado)
        @Html.CheckBoxFor(animal => animal.Castrado)
    </div>

    <div class="form-group">
        @Html.LabelFor(animal => animal.Peso)
        @Html.TextBoxFor(animal => animal.Peso)
    </div>

    <input type="submit" value="Cadastrar" class="btn btn-primary" />

}


